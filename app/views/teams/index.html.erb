<h1>Listing teams</h1>

<p>
  Download:
  <%= link_to "CSV", teams_path(format: "csv") %> |
  <%= link_to "Excel", teams_path(format: "xls") %>
</p>

<table>
  <tr>
    <th>Name</th>
    <th>Team url</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @teams.each do |team| %>
  <tr>
    <td><%= team.name %></td>
    <td><%= team.team_url %></td>
    <td><%= link_to 'Show', team %></td>
    <td><%= link_to 'Edit', edit_team_path(team) %></td>
    <td><%= link_to 'Destroy', team, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Team', new_team_path %>
